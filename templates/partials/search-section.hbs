<div class="mb-8">
    <div class="mb-4">
        <input type="text" id="searchInput" class="w-full px-3 py-2 border border-border rounded-lg bg-white shadow-card focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/10" placeholder="Search books by title, author, or category...">
    </div>
    <div class="flex gap-4 mb-4">
        <select id="categoryFilter" class="px-3 py-2 border border-border rounded-md bg-white shadow-card cursor-pointer appearance-none bg-no-repeat bg-right pr-8">
            <option value="">All Categories</option>
            {{#each categories}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <select id="locationFilter" class="px-3 py-2 border border-border rounded-md bg-white shadow-card cursor-pointer appearance-none bg-no-repeat bg-right pr-8">
            <option value="">All Locations</option>
            {{#each locations}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <select id="typeFilter" class="px-3 py-2 border border-border rounded-md bg-white shadow-card cursor-pointer appearance-none bg-no-repeat bg-right pr-8">
            <option value="">All Types</option>
            {{#each types}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div class="flex justify-end">
        <select id="sortBy" class="px-3 py-2 border border-border rounded-md bg-white shadow-card cursor-pointer appearance-none bg-no-repeat bg-right pr-8">
            <option value="title">Sort by Title</option>
            <option value="author">Sort by Author</option>
        </select>
    </div>
</div>
<div id="noResults" class="text-center py-12 text-secondary hidden">
    <p class="text-lg">No books found matching your criteria.</p>
</div>
