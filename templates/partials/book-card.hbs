<div class="bg-white rounded-md overflow-hidden shadow-card transition-all hover:shadow-card-hover hover:-translate-y-0.5 flex flex-col" data-category="{{category}}" data-author="{{author}}" data-type="{{type}}" data-location="{{location}}" data-title="{{title}}">
    <!-- Top strip with category and type -->
    <div class="flex justify-between items-center px-4 py-2 {{categoryDark}} border-b {{categoryBorder}}">
        <div class="flex items-center gap-2">
            <svg class="w-4 h-4 {{categoryDarkText}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <a href="{{#if isCategories}}../categories/{{categorySlug}}.html{{else if isAuthors}}../categories/{{categorySlug}}.html{{else}}./categories/{{categorySlug}}.html{{/if}}" class="no-underline transition-colors hover:opacity-80 {{categoryDarkText}} font-medium text-xs uppercase tracking-wider">{{category}}</a>
        </div>
        <div class="flex items-center gap-1">
            {{#if (eq type "Audiobook")}}
            <svg class="w-4 h-4 {{categoryDarkText}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
            </svg>
            {{else}}
            <svg class="w-4 h-4 {{categoryDarkText}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            {{/if}}
            <span class="{{categoryDarkText}} text-xs font-normal">{{type}}</span>
        </div>
    </div>
    
    <!-- Main content area that fills remaining space -->
    <div class="p-4">
        <div>
            <h3 class="text-lg mb-2 text-text-primary">{{title}}</h3>
            <p class="text-primary text-sm">
                by <a href="{{#if isAuthors}}../authors/{{authorSlug}}.html{{else if isCategories}}../authors/{{authorSlug}}.html{{else}}./authors/{{authorSlug}}.html{{/if}}" class="text-primary no-underline transition-colors hover:text-primary/80 hover:underline font-bold">{{firstName}} {{lastName}}</a>
            </p>
        </div>
    </div>
    
    <!-- Bottom bar with location - always at bottom -->
    <div class="px-4 pb-4 mt-2">
        <p class="text-xs uppercase flex items-center gap-1 px-2.5 py-0.5 rounded-full bg-gray-100 w-fit">
            <svg class="w-3 h-3 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-secondary font-medium">{{location}}</span>
        </p>
    </div>
</div>
